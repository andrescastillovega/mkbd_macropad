#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>

/ {

    kscan0: kscan {
        compatible = "zmk,kscan-gpio-matrix";
        diode-direction = "col2row";
        wakeup-source;
        
        row-gpios = <&pro_micro 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro 6 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro 7 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>,
                    <&pro_micro 8 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    default_transform: keymap_transform_0 {
        compatible = "zmk,matrix-transform";
        columns = <12>;
        rows = <5>;

        // | SW1  | SW2  | SW3  | SW4  | SW5  | SW6  |   | SW6  | SW5  | SW4  | SW3  | SW2  | SW1  |
        // | SW7  | SW8  | SW9  | SW10 | SW11 | SW12 |   | SW12 | SW11 | SW10 | SW9  | SW8  | SW7  |
        // | SW13 | SW14 | SW15 | SW16 | SW17 | SW18 |   | SW18 | SW17 | SW16 | SW15 | SW14 | SW13 |
        // | SW19 | SW20 | SW21 | SW22 | SW23 | SW24 |   | SW24 | SW23 | SW22 | SW21 | SW20 | SW19 |
        //                      | SW28 | SW29 | SW30 |   | SW30 | SW29 | SW28 |


        map = <
        RC(0,0) RC(0,1) RC(0,2) RC(0,3) RC(0,4) RC(0,5)  RC(0,6) RC(0,7) RC(0,8) RC(0,9) RC(0,10) RC(0,11)
        RC(1,0) RC(1,1) RC(1,2) RC(1,3) RC(1,4) RC(1,5)  RC(1,6) RC(1,7) RC(1,8) RC(1,9) RC(1,10) RC(1,11)
        RC(2,0) RC(2,1) RC(2,2) RC(2,3) RC(2,4) RC(2,5)  RC(2,6) RC(2,7) RC(2,8) RC(2,9) RC(2,10) RC(2,11)
        RC(3,0) RC(3,1) RC(3,2) RC(3,3) RC(3,4) RC(3,5)  RC(3,6) RC(3,7) RC(3,8) RC(3,9) RC(3,10) RC(3,11)
                                RC(4,3) RC(4,4) RC(4,5)  RC(4,6) RC(4,7) RC(4,8) 
        >;
    };

    // Physical layout definition
    physical_layout0: physical_layout_0 {
        compatible = "zmk,physical-layout";
        display-name = "Default Layout";
        kscan = <&kscan0>;
        transform = <&default_transform>;
        
        keys = 
            // Left side - Row 0
            <&key_physical_attrs 100 100    0    0    0    0    0>, // ESC
            <&key_physical_attrs 100 100  100    0    0    0    0>, // 1
            <&key_physical_attrs 100 100  200    0    0    0    0>, // 2
            <&key_physical_attrs 100 100  300    0    0    0    0>, // 3
            <&key_physical_attrs 100 100  400    0    0    0    0>, // 4
            <&key_physical_attrs 100 100  500    0    0    0    0>, // 5
            
            // Right side - Row 0
            <&key_physical_attrs 100 100  700    0    0    0    0>, // 6
            <&key_physical_attrs 100 100  800    0    0    0    0>, // 7
            <&key_physical_attrs 100 100  900    0    0    0    0>, // 8
            <&key_physical_attrs 100 100 1000    0    0    0    0>, // 9
            <&key_physical_attrs 100 100 1100    0    0    0    0>, // 0
            <&key_physical_attrs 100 100 1200    0    0    0    0>, // DEL
            
            // Left side - Row 1
            <&key_physical_attrs 100 100    0  100    0    0    0>, // TAB
            <&key_physical_attrs 100 100  100  100    0    0    0>, // Q
            <&key_physical_attrs 100 100  200  100    0    0    0>, // W
            <&key_physical_attrs 100 100  300  100    0    0    0>, // E
            <&key_physical_attrs 100 100  400  100    0    0    0>, // R
            <&key_physical_attrs 100 100  500  100    0    0    0>, // T
            
            // Right side - Row 1
            <&key_physical_attrs 100 100  700  100    0    0    0>, // Y
            <&key_physical_attrs 100 100  800  100    0    0    0>, // U
            <&key_physical_attrs 100 100  900  100    0    0    0>, // I
            <&key_physical_attrs 100 100 1000  100    0    0    0>, // O
            <&key_physical_attrs 100 100 1100  100    0    0    0>, // P
            <&key_physical_attrs 100 100 1200  100    0    0    0>, // BSPC
            
            // Left side - Row 2
            <&key_physical_attrs 100 100    0  200    0    0    0>, // SHIFT
            <&key_physical_attrs 100 100  100  200    0    0    0>, // A
            <&key_physical_attrs 100 100  200  200    0    0    0>, // S
            <&key_physical_attrs 100 100  300  200    0    0    0>, // D
            <&key_physical_attrs 100 100  400  200    0    0    0>, // F
            <&key_physical_attrs 100 100  500  200    0    0    0>, // G
            
            // Right side - Row 2
            <&key_physical_attrs 100 100  700  200    0    0    0>, // H
            <&key_physical_attrs 100 100  800  200    0    0    0>, // J
            <&key_physical_attrs 100 100  900  200    0    0    0>, // K
            <&key_physical_attrs 100 100 1000  200    0    0    0>, // L
            <&key_physical_attrs 100 100 1100  200    0    0    0>, // ;
            <&key_physical_attrs 100 100 1200  200    0    0    0>, // SHIFT
            
            // Left side - Row 3
            <&key_physical_attrs 100 100    0  300    0    0    0>, // LCTRL
            <&key_physical_attrs 100 100  100  300    0    0    0>, // Z
            <&key_physical_attrs 100 100  200  300    0    0    0>, // X
            <&key_physical_attrs 100 100  300  300    0    0    0>, // C
            <&key_physical_attrs 100 100  400  300    0    0    0>, // V
            <&key_physical_attrs 100 100  500  300    0    0    0>, // B
            
            // Right side - Row 3
            <&key_physical_attrs 100 100  700  300    0    0    0>, // N
            <&key_physical_attrs 100 100  800  300    0    0    0>, // M
            <&key_physical_attrs 100 100  900  300    0    0    0>, // ,
            <&key_physical_attrs 100 100 1000  300    0    0    0>, // .
            <&key_physical_attrs 100 100 1100  300    0    0    0>, // /
            <&key_physical_attrs 100 100 1200  300    0    0    0>, // trans
            
            // Thumb clusters
            // Left thumb cluster
            <&key_physical_attrs 100 100  300  400    0    0    0>, // WIN
            <&key_physical_attrs 100 100  400  400    0    0    0>, // LWR
            <&key_physical_attrs 100 100  500  400    0    0    0>, // SPC
            
            // Right thumb cluster
            <&key_physical_attrs 100 100  700  400    0    0    0>, // ENTER
            <&key_physical_attrs 100 100  800  400    0    0    0>, // RSE
            <&key_physical_attrs 100 100  900  400    0    0    0>; // ALT
    };

    // Chosen node
    chosen {
        zmk,kscan = &kscan0;
        zmk,physical-layout = &physical_layout0;
    };
};
